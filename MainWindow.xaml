<Window x:Class="WOLFSOFT001C8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WOLFSOFT001C8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="SincronizarButton" Content="Sincronizar Productos"
                Width="200" Height="50" 
                Click="SincronizarProductos_Click"
                FontSize="16"
                Margin="10"/>
            <TextBlock x:Name="EstadoTextBlock" 
                Text=""
                FontSize="14"
                Margin="10"
                Foreground="White"
                HorizontalAlignment="Center"/>
            <ProgressBar x:Name="SyncProgressBar"
                Width="300"
                Height="20"
                Margin="10"
                IsIndeterminate="True"
                Visibility="Collapsed"/>                       
        </StackPanel>
    </Grid>
</Window>
